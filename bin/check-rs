#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "${BASH_SOURCE[0]}")/.."

echo "Checking Rust formatting..."
cargo fmt --manifest-path zorto/Cargo.toml -- --check

echo "Running clippy..."
cargo clippy --manifest-path zorto/Cargo.toml -- -D warnings

echo "Running Rust tests..."
cargo test --manifest-path zorto/Cargo.toml

echo "Rust checks passed!"
